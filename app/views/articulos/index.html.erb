<p id="notice"><%= notice %></p>

<h1>Listing Articulos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articulos.each do |articulo| %>
      <tr>
        <td><%= articulo.titulo %></td>
        <td><%= articulo.contenido %></td>
        <td><%= link_to 'Editar', edit_articulo_path(articulo), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Borrar', articulo, method: :delete, data: { confirm: '¿Está seguro?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nuevo Artículo', new_articulo_path, :class => 'btn btn-success' %>
